---
import { Image } from "@astrojs/image/components";

const PROFILE_IMAGE = "/profile-image.webp";
---

<div class="w-fit mx-auto mt-5 mb-6">
    <a href="/">
        <div
            class="avatar transition ease-in-out hover:scale-[102%] block m-auto"
        >
            <div class="w-[9rem]">
                <Image
                    class="mask mask-circle"
                    aspectRatio="1:1"
                    format="webp"
                    width={300}
                    height={300}
                    src={PROFILE_IMAGE}
                    alt="Profile image"
                />
            </div>
        </div>
    </a>
</div>
